   <TextView
            android:id="@+id/order_date"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:text="22-4-2020 12:53"
            android:textSize="14dp"
            ></TextView>


</LinearLayout>


