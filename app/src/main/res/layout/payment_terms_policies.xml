<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:text="Payment Terms and Policies."
            android:textColor="#120222"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="193dp" />

        <TextView
            android:id="@+id/policies"
            android:paddingStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="All prices are in U.S. dollars. \nJada'a books standard payment terms are 60 days.
            \nThe application is not responsible for any mistakes committed by the seller.
"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="193dp"
            android:paddingLeft="5dp" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I Agree" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>