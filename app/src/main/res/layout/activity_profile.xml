<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:id="@+id/drawer_layout"
    android:background="@drawable/pup_les">
 <!-- tools:openDrawer="start"-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/menu_24"
        app:titleTextColor="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">


       <TextView
           android:id="@+id/phone"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="32dp"
           android:layout_marginLeft="32dp"
           android:layout_marginTop="24dp"
           android:layout_marginEnd="32dp"
           android:layout_marginRight="32dp"
           android:background="@drawable/round_border_blue"
           android:drawableRight="@drawable/phone_pro"
           android:drawablePadding="16dp"
           android:ems="10"
           android:hint="Phone"
           android:inputType="phone"
           android:padding="16dp"
           android:textColor="#050009"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/email" />

       <TextView
           android:id="@+id/name"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="32dp"
           android:layout_marginLeft="32dp"
           android:layout_marginTop="284dp"
           android:layout_marginEnd="32dp"
           android:layout_marginRight="32dp"
           android:background="@drawable/round_border_blue"
           android:drawableRight="@drawable/person_pro"
           android:drawablePadding="16dp"
           android:ems="10"
           android:inputType="textPersonName"
           android:padding="16dp"
           android:hint="Name"
           android:textColor="#05000B"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/EditButton"
           android:layout_width="69dp"
           android:layout_height="68dp"
           android:layout_marginStart="186dp"
           android:layout_marginLeft="186dp"
           android:layout_marginEnd="156dp"
           android:layout_marginRight="156dp"
           android:layout_marginBottom="44dp"
           android:background="@drawable/edit"
           android:text=""
           app:layout_constraintBottom_toTopOf="@+id/name"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="1.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintVertical_bias="0.72" />

       <TextView
           android:id="@+id/email"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="32dp"
           android:layout_marginLeft="32dp"
           android:layout_marginTop="24dp"
           android:layout_marginEnd="32dp"
           android:layout_marginRight="32dp"
           android:background="@drawable/round_border_blue"
           android:drawableRight="@drawable/emai_pro"
           android:drawablePadding="16dp"
           android:ems="10"
           android:inputType="textPersonName"
           android:padding="16dp"
           android:hint="Email"
           android:textColor="#040007"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/name" />


   </androidx.constraintlayout.widget.ConstraintLayout>

